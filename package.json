{
  "name": "extrahub",
  "version": "1.2.0",
  "description": "Hub de Gestão de Automações e Relatórios",
  "main": "electron/main_electron.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder",
    "postinstall": "playwright install chromium"
  },
  "keywords": [],
  "author": "Carlos Turina",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.4.5",
    "googleapis": "^140.0.1",
    "playwright": "^1.45.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "electron": "^31.1.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.carlosturina.extrahub",
    "productName": "ExtraHUB",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "preload.js",
      "frontend/**/*",
      "backend/**/*",
      "package.json",
      "playwright.config.js",
      "node_modules/playwright/.local-browsers/**",
      "!node_modules/fsevents"
    ],
    "extraResources": [
      {
        "from": "backend/.env",
        "to": "app.asar.unpacked/backend/.env"
      },
      {
        "from": "backend/service_account.json",
        "to": "app.asar.unpacked/backend/service_account.json"
      }
    ],
    "win": {
      "icon": "frontend/assets/icon.ico",
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
